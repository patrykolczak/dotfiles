# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 1
	color_good = "#95C7AE"
	color_degraded = "#C7AE95"
	color_bad = "#C795AE"
}

order += "volume master"
order += "battery 0"
order += "ethernet _first_"
order += "wireless _first_"
order += "tztime local2"
order += "tztime local"

ethernet _first_ {
        format_up = " Kabel podłączony "
        format_down = " Kabel odłączony "
}

wireless _first_ {
	format_up = " WiFi %essid %quality "
	format_down = " WiFi rozłączono "
}

tztime local {
        format = " %H:%M:%S "
}

tztime local2 {
	format = " %d-%m-%Y "
}

volume master {
        format = " Dźwięk %volume "
        format_muted = " Dźwięk wyciszony (%volume) "
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

battery 0 {
	format = " %status %percentage "
	format_down = "Nie ma bateri"
	status_chr = "Ładowanie"
	status_bat = "Bateria"
	status_unk = "Ładowanie"
	status_full =  "Naładowana"
	path = "/sys/class/power_supply/BAT0/uevent"
	low_threshold = 15
	last_full_capacity = true
}
